
<h1>Welcome to BruGram</h1>

<% if user_signed_in? %>
<h1> All public photos of all users : </h1>
<table>
<tbody>
	<% @photos.each do |photo| %>
	<tr>
		<td><%= link_to(image_tag(photo.image, :size => '100x175'), user_photo_path(current_user,photo)) %></td>
	</tr>
	<% end %>
</tbody>
</table>


<%= link_to 'my photos' , user_photos_path(current_user) %> 

<% end %>