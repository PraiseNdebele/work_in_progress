<h1> All your photos : </h1>

<table>
<tbody>
	<% @photos.each do |photo| %>
	<tr>
		<td><%= photo.caption %></td>
		<td><%= link_to(image_tag(photo.image, :size => '100x175' ), user_photo_path(current_user,photo)) %></td>
	</tr>
	<% end %>
</tbody>
</table>

<%= link_to 'New Photo', new_user_photo_path(current_user) %> 