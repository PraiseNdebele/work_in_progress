<%= form_for([@photo, @photo.comments.build]) do |f| %>
    <div class="clearfix"></div>
    <div class="form-group col-lg-12">
          <p>
            <% f.label :body %>	    
		    <%= f.text_area :body , :class => "form-control",:rows => "6"%>
		  </p>                            
    </div>
    <div class="form-group col-lg-12">
		   <p>
		    <%= f.button(:submit, class: "btn btn-default", :type => "submit") %> 
		  </p>                            
    </div>
<% end %>





