<%= render  'nav' %>
     <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Comments</strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                    <h2><%= @photo.caption %></h2>
                    <br>
                    <%= image_tag(@photo.image,:class => "img-responsive",:width => "100%", :height => "400", :alt => "") if @photo.present? %>
                    <% if @power %>
                        <h2><small><%= link_to 'Edit', edit_user_photo_path(current_user, @photo) %> | 
                        <%= link_to 'Delete', user_photo_path(current_user, @photo) ,
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' } %></small></h2>
                        <% end %>
                    <hr>
                    <%= render @photo.comments %>
                </div>
            </div>
           </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Add a comment </strong>
                    </h2>
                    <hr>
                    <%= render 'comments/form' %>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
<%= render 'footer' %>
