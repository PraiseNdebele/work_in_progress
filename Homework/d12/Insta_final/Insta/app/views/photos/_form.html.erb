<div class = "new">
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong><%= @title %></strong>
            </h2>
            <hr>
            <div class = "sign-up" >
            <%= form_for([@current_user, @photo])do |f| %>
              <% if @current_user.errors.any? %>
                <div id="error_explanation">
                  <h2>
                    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
                  </h2>

                  <ul>
                    <% @current_user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <%= f.label :image %>
              <div align = "center"><%= f.file_field :image %></div></br> 

              <%= f.label :caption %>
              <div><%= f.text_field :caption , :size => 30 %></div></br>

              <%= f.label :public %>
              <div><%= f.check_box :public %></div></br>

              <%= f.button(:submit, class: 'btn btn-primary', :type => "submit") %>  
            <% end %>
            </div>
        </div>
    </div>
</div>
</div>