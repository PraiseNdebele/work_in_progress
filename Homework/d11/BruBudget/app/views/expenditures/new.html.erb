<h1>New expenditure</h1>


<%= form_for [@spender, @expenditure] do |f| %>

  <% if @expenditure.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@expenditure.errors.count, "error") %> prohibited this expenditure from being saved:
      </h2>

      <ul>
        <% @expenditure.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :item_purchased %><br>
    <%= f.text_field :item , :size => 30 %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price , :size => 30 %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category , :size => 30 %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to "Back", spender_expenditures_path(params[:spender_id]) %>